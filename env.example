# Breakout Bot Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=sqlite:///app/data/breakout_bot.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/breakout_bot

# Trading Configuration
TRADING_MODE=paper
PAPER_STARTING_BALANCE=100000.0
LIVE_STARTING_BALANCE=10000.0

# Exchange Configuration
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET_KEY=your_secret_key_here
EXCHANGE_SANDBOX=true

# Risk Management
MAX_DAILY_LOSS_PERCENT=5.0
MAX_POSITION_SIZE_PERCENT=2.0
MAX_CORRELATION_EXPOSURE=0.7
KILL_SWITCH_DAILY_LOSS_PERCENT=10.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/breakout_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/api/metrics

# Security Configuration
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_here_change_this_in_production
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80.0
MAX_DISK_PERCENT=90.0

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Alert Configuration
ENABLE_ALERTS=true
ALERT_EMAIL=admin@example.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development/Testing
DEBUG=false
TESTING=false
MOCK_EXCHANGE=false
