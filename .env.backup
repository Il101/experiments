# Exchange API credentials
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET=your_secret_key_here
EXCHANGE_PASSPHRASE=your_passphrase_here
EXCHANGE_SANDBOX=true

# Trading mode
TRADING_MODE=paper  # paper or live

# Default exchange
DEFAULT_EXCHANGE=bybit

# Risk management
DEFAULT_RISK_PER_TRADE=0.006  # 0.6%
MAX_CONCURRENT_POSITIONS=3
DAILY_RISK_LIMIT=0.05  # 5%

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Database
DATABASE_URL=sqlite:///breakout_bot.db

# Paper trading settings
PAPER_STARTING_BALANCE=100000  # USD
PAPER_SLIPPAGE_BPS=5  # 5 basis points