# Breakout Bot Trading System Configuration
# Copy this file to .env and fill in your exchange credentials

# Exchange Configuration
EXCHANGE=bybit
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
SUBACCOUNT=your_subaccount_name_here
QUOTE=USDT

# Trading Mode (paper or live)
MODE=paper

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/breakout_bot.log

# Risk Management
DAILY_RISK_LIMIT=0.05
MAX_CONCURRENT_POSITIONS=3
KILL_SWITCH_LOSS_LIMIT=0.15

# Database Configuration
DATABASE_URL=sqlite:///breakout_bot.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Development Settings
DEBUG=false
TEST_MODE=false
